<table id="consultations-table" class="table mt-3 table-light table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Patient</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @consultations.blank? %>
      <p>No consultations yet. Go ahead and add the first one for this patient</p>
    <% else %>
      <%= render collection: @consultations, partial: 'consultation' %>
    <% end %>
  </tbody>
</table>
