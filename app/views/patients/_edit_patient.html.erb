<div id="edit-patient" class="container">
  <div class="row mt-3">
    <h3>Edit Patient</h3>
  </div>
  <%= simple_form_for patient do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :birth_date, as: :date, html5: true,
                start_year: Date.today.year - 90,
                end_year: Date.today.year - 12,
                discard_day: true,
                order: [:month, :year] %>
    <%= f.input :phone %>
    <%= f.input :address %>
    <%= f.button :submit, 'Save', class: "btn btn-primary mt-3 text-white" %>
    <%= link_to 'Cancel', cancel_edit_patient_path(@patient), class: 'btn btn-secondary mt-3', data: { turbo_stream: true } %>
  <% end %>
</div>
